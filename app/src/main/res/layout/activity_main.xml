<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnOldWay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="checkPermissionInOldWay"
        android:text="Check permission in old way" />

    <Button
        android:id="@+id/btnNewWay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOldWay"
        android:layout_centerHorizontal="true"
        android:onClick="checkPermissionInNewWay"
        android:text="Check permission in new way" />
</RelativeLayout>